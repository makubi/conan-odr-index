{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "customManagers:githubActionsVersions"
  ],
  "conan": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "conan"
      ],
      "registryUrls": [
        "https://artifactory.opendocument.app/artifactory/api/conan/conan",
        "https://center2.conan.io"
      ]
    },
    {
    {
      "matchDatasources": [
        "conan"
      ],
      "matchDepNames": [
        "cmake"
      ],
      "allowedVersions": "!/4\\..*/"
    }
  ]
}
