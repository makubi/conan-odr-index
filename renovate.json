{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "conan": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "conan"
      ],
      "registryUrls": [
        "https://artifactory.opendocument.app/artifactory/api/conan/conan",
        "https://center2.conan.io"
      ]
    },
    {
      "matchDatasources": [
        "conan"
      ],
      "matchDepNames": [
        "wvware"
      ],
      "versioning": "docker"
    }
  ],
  "schedule": ["at any time"],
  "prHourlyLimit": 100,
  "prConcurrentLimit": 100,
  "pinDigests": true
}
