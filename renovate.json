{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  
  "conan": {
    "enabled": true
  },
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "matchDatasources": [
        "conan"
      ],
      "registryUrls": [
        "https://artifactory.opendocument.app/artifactory/api/conan/conan",
        "https://center2.conan.io"
      ],
      "rangeStrategy": "replace"
    }
  ]
}
